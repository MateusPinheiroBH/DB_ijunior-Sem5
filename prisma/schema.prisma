generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int             @id @default(autoincrement())
  name        String
  email       String          @unique
  password    String
  photoUrl    String?
  privilege    Boolean        @default(false)

  listenedSongs SongUser[]
}

model Artist {
  id        Int       @id @default(autoincrement())
  name      String
  photoUrl  String?
  streams   Int       @default(0)

  albums    Album[]
  songs     Song[]
}

model Album {
  id          Int         @id @default(autoincrement())
  title       String
  coverUrl    String?
  releaseDate DateTime?

  artistId    Int
  artist      Artist      @relation(fields: [artistId], references: [id])

  songs       Song[]
}

model Song {
  id        Int     @id @default(autoincrement())
  name      String
  genre     String
  coverURL  String?

  artistId  Int
  artist    Artist  @relation(fields: [artistId], references: [id])

  albumId   Int
  album     Album   @relation(fields: [albumId], references: [id])

  listeners SongUser[]
}

model SongUser {
  id       Int    @id @default(autoincrement())

  user     User   @relation(fields: [userId], references: [id])
  userId   Int

  song     Song   @relation(fields: [songId], references: [id])
  songId   Int
}
